package Cards;

import java.awt.Font;

import javax.swing.JComboBox;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class BirthdayCardType extends CardType {

	private enum CardSpecialty{
		HUMOR,
		CARING
	}
	
	public BirthdayCardType(){
		cardTypeName = "Birthday Card";
		setUpInfoFormPanel();
	}
	
	
	JTextField ageField;
	JComboBox<CardSpecialty> selectionBox;
	
	int itemWidth = 200;
	int itemVertIndent = 25;
	int itemHeight = 25;
	int itemIndent = 115;
	int itemVertSpacing = 5;
	
	int labelX = 30;
	
	@Override
	protected void setUpInfoFormPanel() {
		panel = new JPanel();
		panel.setLayout(null);
		
		JLabel panelLabel = new JLabel(cardTypeName + " Info:");
		panelLabel.setBounds(labelX, 10, 200, 50);
		panelLabel.setFont(new Font("Comic Sans MS", Font.PLAIN, 16));
		panel.add(panelLabel);
		
		JLabel ageLabel = new JLabel("Age:");
		ageLabel.setBounds(labelX, itemVertIndent + itemHeight, itemWidth, itemHeight);
		ageLabel.setFont(new Font("Comic Sans MS", Font.PLAIN, 16));
		panel.add(ageLabel);
		
		ageField = new JTextField();
		ageField.setBounds(itemIndent, itemVertIndent + itemHeight, itemWidth, itemHeight);
		panel.add(ageField);
		
		
		JLabel cardTypeLabel = new JLabel("Card Type:");
		cardTypeLabel.setBounds(labelX, itemVertIndent + itemHeight * 2, itemWidth, itemHeight);
		cardTypeLabel.setFont(new Font("Comic Sans MS", Font.PLAIN, 16));
		panel.add(cardTypeLabel);
		
		selectionBox = new JComboBox<CardSpecialty>();
		selectionBox.setBounds(itemIndent, itemVertIndent + itemHeight * 2 + itemVertSpacing, itemWidth, itemHeight);
		selectionBox.addItem(CardSpecialty.HUMOR);
		selectionBox.addItem(CardSpecialty.CARING);
		panel.add(selectionBox);
		
	}

	@Override
	public void onGenerate() {
		
	}

}
